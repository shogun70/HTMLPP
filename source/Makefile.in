srcdir = @srcdir@
VPATH = @srcdir@

include @top_srcdir@/mk/gnu.bsdvars.mk

.SUFFIXES :
.SUFFIXES : .html .xhtml .js .xml .xpl .xbl

RESOURCES = htmlpp.xsl htmldecor.xsl xhtml2xhtml.xsl decor2xsl.xsl
TARGETS = htmlpp htmldecor decor2xsl HTMLDecor.js

# Rules
all : build

build : ${TARGETS}

install: ${TARGETS} ${RESOURCES}
	[ -d ${pkglibexecdir} ] || ${INSTALL} -d ${pkglibexecdir}
	${INSTALL} ${.ALLSRC} ${pkglibexecdir}/

clean : 
	-rm ${TARGETS}

htmlpp: htmlpp.pl
	cp ${.IMPSRC} ${.TARGET}
	
htmldecor: htmldecor.pl
	cp ${.IMPSRC} ${.TARGET}
	
decor2xsl: decor2xsl.pl
	cp ${.IMPSRC} ${.TARGET}
	
HTMLDecor.js: ${srcdir}/lib/Meeko/HTMLDecor.js
	cp ${.IMPSRC} ${.TARGET}
	
